<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tmc.ensi.org.tmcapp">

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".ProfileActivity" />

        <receiver android:name=".NotificationBroadcastReceiver" />

        <activity android:name=".CheckupActivity" />
        <activity android:name=".CheckupDetails" />
        <activity android:name=".CheckupForm" />
        <activity android:name=".DoctorCodeActivity" />
        <activity android:name=".MedicalProblemsActivity"></activity>
    </application>

</manifest>