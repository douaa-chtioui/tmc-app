<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".ValvePathologyActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:tag="cards main container">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:tag="cards main container">
            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardBackgroundColor="#01048A"
                card_view:cardElevation="10dp"
                card_view:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:textSize="25dp"
                        android:textColor="@color/colorAccent"
                        android:text="avez vous une valve mÃ©canique?"/>
                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:tag="image_tag"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/doctor1"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            >

                            <RadioGroup
                                android:id="@+id/rg_mecanicalValve"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <RadioButton
                                        android:id="@+id/btn_checkMecanicalValve"
                                        android:buttonTint = "#FF4700"
                                        android:shadowColor="#FF4700"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Oui"/>
                                    <RadioButton
                                        android:id="@+id/btn_checkNoMecanicalValve"
                                        android:buttonTint = "#FF4700"
                                        android:shadowColor="#FF4700"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Non"
                                        android:checked="true"/>
                                </LinearLayout>

                              <EditText
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:hint="si oui en quelle position? "/>

                            </RadioGroup>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                card_view:cardBackgroundColor="#01048A"
                android:layout_height="220dp"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="10dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:textColor="@color/colorAccent"
                        android:text="avez vous une valve biologique?"
                        android:textSize="25dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/doctor1"
                            android:tag="image_tag" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <RadioGroup
                                android:id="@+id/rg_biologicalValve"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:buttonTint = "#FF4700"
                                    android:id="@+id/btn_checkBiologicalValve"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Oui" />

                                <RadioButton
                                    android:buttonTint = "#FF4700"
                                    android:id="@+id/btn_checkNoBiologicalValve"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Non"
                                    android:checked="true"/>
                            </RadioGroup>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <Button
                android:id="@+id/btn_valvePathology"
                android:background="#22b6ce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="enregistrer"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>